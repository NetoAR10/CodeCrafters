<%- include('includes/sidebar.ejs') %>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width-device-width, initial-scale=1.0">
    <title>Crear Deuda</title>
    <link rel="stylesheet" href="/css/login.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="wrapper">
        <form action="/user/admin/crearDeuda" method="POST">
	<input type="hidden" name="_csrf" value="<%= csrfToken %>" >
        <input type="hidden" name="Matricula" value="<%= matricula ? matricula : '' %>" required>

            <div class="input-box">
                <label for="Total_deuda">Total deuda:</label>
                <input type="number" name="Total_deuda" placeholder="Ejemplo: 2500" step=0.01 required>
            </div>

            <div class="input-box">
                <label for="Plan_pago">Plan de pago:</label>
                <input type="text" name="Plan_pago" placeholder="Ejemplo: Mensual" required>
            </div>

            <div class="input-box">
                <label for="Concepto">Concepto:</label>
                <input type="text" name="Concepto" placeholder="Ejmplo: Inscripción"  required>
            </div>

            <div class="input-box">
                <label for="Mes">Mes:</label>
                <input type="text" name="Mes" placeholder="Ejemplo: Enero" required>
            </div>

            <div class="input-box">
                <label for="Fecha limite">Fecha límite:</label>
                <input type="date" name="Fecha_limite" required>
            </div>

            <div class="space"></div>
            <button type="submit" class="btn">Crear Deuda</button>
	    
	    <button type="button" onclick="window.location.href='http://localhost:2050/'" class="btn">Cancelar</button>
	</form>
    </div>
</body>
</html>
